<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".EnterData">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <EditText
        android:textColorHint="@color/black"
        android:layout_margin="5dp"
        android:hint="enter name"
        android:id="@+id/edt_txt"
        android:layout_width="match_parent"
        android:layout_height="90dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="4"
        android:hint="Enter the photo link"
        android:textColorHint="@color/black"
        android:id="@+id/edit_txt_photo1"/>
    <Button
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:id="@+id/show_photo1"
        android:text="Show Photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/ic_baseline_refresh_24"/>
    <ImageView
        android:id="@+id/view_photo1"
        android:layout_marginTop="10dp"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center"/>
    <Button
        android:id="@+id/record_photo1"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:text="Add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:text="Go to List"
        android:id="@+id/go_to_mainactivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>